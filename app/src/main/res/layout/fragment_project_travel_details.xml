<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorCharcoal"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/pdfConstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorCharcoal"
        android:visibility="visible">


        <include
            android:id="@+id/dfDashboardHeader"
            layout="@layout/item_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ddfWholeConstraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@color/colorLightCharcoal"
            app:layout_constraintTop_toBottomOf="@+id/dfDashboardHeader">


            <ImageView
                android:id="@+id/ddfProjectStatusImageView"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:src="@drawable/ic_single_dot"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/colorGreen" />

            <com.task.utils.font.CustomFontTextViewBold
                android:id="@+id/pdfProjectIdTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:text="Project 456"
                android:textColor="@color/colorAliceBlue"
                android:textSize="@dimen/_14sdp"
                app:layout_constraintStart_toEndOf="@+id/ddfProjectStatusImageView"
                app:layout_constraintTop_toTopOf="parent" />


            <com.task.utils.font.CustomFontTextViewMedium
                android:id="@+id/pliProjectDateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:textColor="@color/colorAliceBlue"
                android:textSize="@dimen/_11sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_9sdp"
                android:layout_marginEnd="@dimen/_3sdp"
                android:src="@drawable/ic_right_arrow"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/pliProjectDetailsConstraintLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_14sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                android:visibility="visible"
                app:layout_constraintTop_toBottomOf="@+id/pdfProjectIdTextView">

                <com.task.utils.font.CustomFontTextViewMedium
                    android:id="@+id/ddfDriveTimeHintTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:gravity="start"
                    android:text="@string/drive_time_start_ideal"
                    android:textColor="@color/colorAliceBlue"
                    android:textSize="@dimen/_13sdp"
                    app:layout_constraintEnd_toStartOf="@+id/ddfDriveTimeTextView"
                    app:layout_constraintHorizontal_weight="0.2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <com.task.utils.font.CustomFontTextViewMedium
                    android:id="@+id/ddfDriveTimeTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_1sdp"
                    android:gravity="end"
                    android:text="07:30 Uhr"
                    android:textColor="@color/colorAliceBlue"
                    android:textSize="@dimen/_13sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_weight="0.1"
                    app:layout_constraintStart_toEndOf="@+id/ddfDriveTimeHintTextView"
                    app:layout_constraintTop_toTopOf="parent" />


                <com.task.utils.font.CustomFontTextViewMedium
                    android:id="@+id/ddfWorkStartHintTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:gravity="start"
                    android:text="@string/work_starts_at_location"
                    android:textColor="@color/colorAliceBlue"
                    android:textSize="@dimen/_13sdp"
                    app:layout_constraintEnd_toStartOf="@+id/ddfWorkStartTimeTextView"
                    app:layout_constraintHorizontal_weight="0.2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ddfDriveTimeHintTextView" />


                <com.task.utils.font.CustomFontTextViewMedium
                    android:id="@+id/ddfWorkStartTimeTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_1sdp"
                    android:gravity="end"
                    android:text="08:30 Hrs."
                    android:textColor="@color/colorAliceBlue"
                    android:textSize="@dimen/_13sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_weight="0.1"
                    app:layout_constraintStart_toEndOf="@+id/ddfWorkStartHintTextView"
                    app:layout_constraintTop_toBottomOf="@+id/ddfDriveTimeHintTextView" />


                <com.task.utils.font.CustomFontTextViewBold
                    android:id="@+id/pliProjectHintTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:text="@string/team"
                    android:textColor="@color/colorAliceBlue"
                    android:textSize="@dimen/_13sdp"
                    app:layout_constraintTop_toBottomOf="@+id/ddfWorkStartHintTextView" />

                <com.task.utils.font.CustomFontTextViewMedium
                    android:id="@+id/pdfProjectDescriptionTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_1sdp"
                    android:text="Albert Ritschard [TL], Susanne Iten, Franco Riccio, Martianne Aeby, Marta Amman"
                    android:textColor="@color/colorAliceBlue"
                    android:textSize="@dimen/_12sdp"
                    app:layout_constraintTop_toBottomOf="@+id/pliProjectHintTextView" />

                <com.task.utils.font.CustomFontTextViewBold
                    android:id="@+id/pliProjectLocationHintTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:text="@string/location"
                    android:textColor="@color/colorAliceBlue"
                    android:textSize="@dimen/_13sdp"
                    app:layout_constraintTop_toBottomOf="@+id/pdfProjectDescriptionTextView" />

                <com.task.utils.font.CustomFontTextViewMedium
                    android:id="@+id/pdfProjectLocationDescriptionTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_1sdp"
                    android:text="Schlossstrasse 1A, 3800 Interlaken BE"
                    android:textColor="@color/colorAliceBlue"
                    android:textSize="@dimen/_12sdp"
                    app:layout_constraintTop_toBottomOf="@+id/pliProjectLocationHintTextView" />


            </androidx.constraintlayout.widget.ConstraintLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="@android:color/darker_gray"
                app:layout_constraintTop_toBottomOf="@+id/pliProjectDetailsConstraintLayout" />


        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintddfTravelTimeHint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@+id/ddfWholeConstraintLayout">

            <com.task.utils.font.CustomFontTextViewBold
                android:id="@+id/textddfTravelTimeHint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:gravity="center"
                android:text="@string/title_time_stamp"
                android:textColor="@color/colorAliceBlue"
                android:textSize="@dimen/_13sdp"
                android:visibility="visible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintWholeTravelTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_30sdp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/constraintddfTravelTimeHint">


            <com.task.utils.font.CustomFontTextViewMedium
                android:id="@+id/textddfTravelTimeStartHint"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:gravity="start"
                android:text="@string/title_travel_start_time"
                android:textColor="@color/colorAliceBlue"
                android:textSize="@dimen/_12sdp"
                android:visibility="gone"
                app:layout_constraintEnd_toStartOf="@+id/textddfTravelTimeEndHint"
                app:layout_constraintHorizontal_weight="0.2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <com.task.utils.font.CustomFontTextViewMedium
                android:id="@+id/textddfTravelTimeEndHint"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_1sdp"
                android:gravity="end"
                android:text="@string/title_travel_end_time"
                android:textColor="@color/colorAliceBlue"
                android:textSize="@dimen/_12sdp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_weight="0.2"
                app:layout_constraintStart_toEndOf="@+id/textddfTravelTimeStartHint"
                app:layout_constraintTop_toTopOf="parent" />


            <com.task.utils.font.CustomFontTextViewBold
                android:id="@+id/textddfTravelTimeStart"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:gravity="start"
                android:text="08:10"
                android:textColor="@color/colorOrange"
                android:textSize="@dimen/_16sdp"
                android:visibility="gone"
                app:layout_constraintEnd_toStartOf="@+id/textddfTravelTimeEndHint"
                app:layout_constraintHorizontal_weight="0.2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textddfTravelTimeStartHint" />


            <com.task.utils.font.CustomFontTextViewBold
                android:id="@+id/textddfTravelTimeEnd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_1sdp"
                android:gravity="end"
                android:text="00:00"
                android:textColor="@color/colorOrange"
                android:textSize="@dimen/_16sdp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_weight="0.2"
                app:layout_constraintStart_toEndOf="@+id/textddfTravelTimeStartHint"
                app:layout_constraintTop_toBottomOf="@+id/textddfTravelTimeEndHint" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/dfTimerConstraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@+id/constraintWholeTravelTime">


            <com.task.utils.font.CustomFontTextViewBold
                android:id="@+id/dfTimeHintTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/travel_time"
                android:textColor="@color/colorAliceBlue"
                android:textSize="@dimen/_14sdp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <com.task.utils.font.CustomFontTextViewBold
                android:id="@+id/dfTimerTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/circular_textview"
                android:gravity="center"
                android:text="@string/action_start"
                android:textColor="@color/colorAliceBlue"
                android:textSize="@dimen/_18sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dfTimeHintTextView" />

            <com.task.utils.font.CustomFontTextViewBold
                android:id="@+id/dfPauseTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"
                android:text="@string/tap_to_pause"
                android:textColor="@color/colorAliceBlue"
                android:textSize="@dimen/_13sdp"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dfTimerTextView" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <RelativeLayout
            android:id="@+id/ddfProgressBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorCharcoal"
            android:clickable="true"
            android:visibility="gone">

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />
        </RelativeLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>