<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorCharcoal"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/pdfConstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorCharcoal"
        android:visibility="visible">


        <include
            android:id="@+id/dfDashboardHeader"
            layout="@layout/item_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ddfWholeConstraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@color/colorLightCharcoal"
            app:layout_constraintTop_toBottomOf="@+id/dfDashboardHeader">


            <ImageView
                android:id="@+id/ddfProjectStatusImageView"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:src="@drawable/ic_single_dot"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/colorGreen" />

            <com.task.utils.font.CustomFontTextViewBold
                android:id="@+id/pdfProjectIdTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:text="Project 456"
                android:textColor="@color/colorAliceBlue"
                android:textSize="@dimen/_14sdp"
                app:layout_constraintStart_toEndOf="@+id/ddfProjectStatusImageView"
                app:layout_constraintTop_toTopOf="parent" />


            <com.task.utils.font.CustomFontTextViewMedium
                android:id="@+id/pliProjectDateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:textColor="@color/colorAliceBlue"
                android:textSize="@dimen/_11sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_9sdp"
                android:layout_marginEnd="@dimen/_3sdp"
                android:src="@drawable/ic_right_arrow"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/pliProjectDetailsConstraintLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_14sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                android:visibility="visible"
                app:layout_constraintTop_toBottomOf="@+id/pdfProjectIdTextView">

                <com.task.utils.font.CustomFontTextViewMedium
                    android:id="@+id/ddfDriveTimeHintTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:gravity="start"
                    android:text="@string/drive_time_start_ideal"
                    android:textColor="@color/colorAliceBlue"
                    android:textSize="@dimen/_13sdp"
                    app:layout_constraintEnd_toStartOf="@+id/ddfDriveTimeTextView"
                    app:layout_constraintHorizontal_weight="0.2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <com.task.utils.font.CustomFontTextViewMedium
                    android:id="@+id/ddfDriveTimeTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_1sdp"
                    android:gravity="end"
                    android:text="07:30 Uhr"
                    android:textColor="@color/colorAliceBlue"
                    android:textSize="@dimen/_13sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_weight="0.1"
                    app:layout_constraintStart_toEndOf="@+id/ddfDriveTimeHintTextView"
                    app:layout_constraintTop_toTopOf="parent" />


                <com.task.utils.font.CustomFontTextViewMedium
                    android:id="@+id/ddfWorkStartHintTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:gravity="start"
                    android:text="@string/work_starts_at_location"
                    android:textColor="@color/colorAliceBlue"
                    android:textSize="@dimen/_13sdp"
                    app:layout_constraintEnd_toStartOf="@+id/ddfWorkStartTimeTextView"
                    app:layout_constraintHorizontal_weight="0.2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ddfDriveTimeHintTextView" />


                <com.task.utils.font.CustomFontTextViewMedium
                    android:id="@+id/ddfWorkStartTimeTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_1sdp"
                    android:gravity="end"
                    android:text="08:30 Hrs."
                    android:textColor="@color/colorAliceBlue"
                    android:textSize="@dimen/_13sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_weight="0.1"
                    app:layout_constraintStart_toEndOf="@+id/ddfWorkStartHintTextView"
                    app:layout_constraintTop_toBottomOf="@+id/ddfDriveTimeHintTextView" />


                <com.task.utils.font.CustomFontTextViewBold
                    android:id="@+id/pliProjectHintTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:text="@string/team"
                    android:textColor="@color/colorAliceBlue"
                    android:textSize="@dimen/_13sdp"
                    app:layout_constraintTop_toBottomOf="@+id/ddfWorkStartHintTextView" />

                <com.task.utils.font.CustomFontTextViewMedium
                    android:id="@+id/pdfProjectDescriptionTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_1sdp"
                    android:text="Albert Ritschard [TL], Susanne Iten, Franco Riccio, Martianne Aeby, Marta Amman"
                    android:textColor="@color/colorAliceBlue"
                    android:textSize="@dimen/_12sdp"
                    app:layout_constraintTop_toBottomOf="@+id/pliProjectHintTextView" />

                <com.task.utils.font.CustomFontTextViewBold
                    android:id="@+id/pliProjectLocationHintTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:text="@string/location"
                    android:textColor="@color/colorAliceBlue"
                    android:textSize="@dimen/_13sdp"
                    app:layout_constraintTop_toBottomOf="@+id/pdfProjectDescriptionTextView" />

                <com.task.utils.font.CustomFontTextViewMedium
                    android:id="@+id/pdfProjectLocationDescriptionTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_1sdp"
                    android:text="Schlossstrasse 1A, 3800 Interlaken BE"
                    android:textColor="@color/colorAliceBlue"
                    android:textSize="@dimen/_12sdp"
                    app:layout_constraintTop_toBottomOf="@+id/pliProjectLocationHintTextView" />


            </androidx.constraintlayout.widget.ConstraintLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="@android:color/darker_gray"
                app:layout_constraintTop_toBottomOf="@+id/pliProjectDetailsConstraintLayout" />


        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.cardview.widget.CardView
            android:id="@+id/dfProjectDetailCard"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="@dimen/_10sdp"
            android:visibility="gone"
            app:cardElevation="@dimen/_5sdp"
            app:layout_constraintTop_toBottomOf="@+id/dfDashboardHeader">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp">

                <ImageView
                    android:id="@+id/dfProjectNameImageView"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:src="@drawable/ic_project"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.task.utils.font.CustomFontTextViewBold
                    android:id="@+id/dfProjectNameHintTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:text="@string/project_name"
                    android:textColor="@color/colorBlack"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/dfProjectNameImageView"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.task.utils.font.CustomFontTextViewMedium
                    android:id="@+id/dfProjectNameTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:text="@string/rent_a_maid"
                    android:textColor="@color/colorBlack"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/dfProjectNameImageView"
                    app:layout_constraintTop_toBottomOf="@+id/dfProjectNameHintTextView" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/dfEmployeeDetailCard"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="@dimen/_10sdp"
            android:visibility="gone"
            app:cardElevation="@dimen/_5sdp"
            app:layout_constraintTop_toBottomOf="@+id/dfProjectDetailCard">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_8sdp">

                <ImageView
                    android:id="@+id/dfEmployeeNameImageView"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:src="@drawable/ic_employee"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.task.utils.font.CustomFontTextViewBold
                    android:id="@+id/dfEmployeeNameTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:text="@string/client_name"
                    android:textColor="@color/colorBlack"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/dfEmployeeNameImageView"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.task.utils.font.CustomFontTextViewMedium
                    android:id="@+id/dfEmployeeDescriptionTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:text="@string/client_description"
                    android:textColor="@color/colorBlack"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/dfEmployeeNameImageView"
                    app:layout_constraintTop_toBottomOf="@+id/dfEmployeeNameTextView" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/dfDesignationCard"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="@dimen/_10sdp"
            android:visibility="gone"
            app:cardBackgroundColor="@color/colorDarkGrey"
            app:cardCornerRadius="@dimen/_10sdp"
            app:cardElevation="@dimen/_5sdp"
            app:layout_constraintTop_toBottomOf="@+id/dfEmployeeDetailCard">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp">

                <ImageView
                    android:id="@+id/dfDesignationImageView"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/ic_star"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.task.utils.font.CustomFontTextViewBold
                    android:id="@+id/dfDesignationTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:text="@string/team_leader_tl"
                    android:textColor="@color/colorAliceBlue"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/dfDesignationImageView"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/dfTravelTimeCard"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="@dimen/_10sdp"
            android:visibility="gone"
            app:cardBackgroundColor="@color/colorBlue"
            app:cardCornerRadius="@dimen/_10sdp"
            app:cardElevation="@dimen/_5sdp"
            app:layout_constraintTop_toBottomOf="@+id/dfTimerConstraintLayout">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp">

                <ImageView
                    android:id="@+id/dfTimeImageView"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:src="@drawable/ic_time"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.task.utils.font.CustomFontTextViewBold
                    android:id="@+id/dfTravelTimeTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:text="@string/travel_time"
                    android:textColor="@color/colorAliceBlue"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/dfTimeImageView"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.task.utils.font.CustomFontTextViewBold
                    android:id="@+id/dfWorkTimeTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:text="@string/work_time"
                    android:textColor="@color/colorAliceBlue"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/dfTimeImageView"
                    app:layout_constraintTop_toBottomOf="@+id/dfTravelTimeTextView" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintWholeTravelTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginEnd="@dimen/_30sdp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/ddfWholeConstraintLayout">


            <com.task.utils.font.CustomFontTextViewMedium
                android:id="@+id/textddfTravelTimeStartHint"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:gravity="start"
                android:text="@string/title_travel_start_time"
                android:textColor="@color/colorAliceBlue"
                android:textSize="@dimen/_12sdp"
                android:visibility="gone"
                app:layout_constraintEnd_toStartOf="@+id/textddfTravelTimeEndHint"
                app:layout_constraintHorizontal_weight="0.2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <com.task.utils.font.CustomFontTextViewMedium
                android:id="@+id/textddfTravelTimeEndHint"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_1sdp"
                android:gravity="end"
                android:text="@string/title_travel_end_time"
                android:textColor="@color/colorAliceBlue"
                android:textSize="@dimen/_12sdp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_weight="0.2"
                app:layout_constraintStart_toEndOf="@+id/textddfTravelTimeStartHint"
                app:layout_constraintTop_toTopOf="parent" />


            <com.task.utils.font.CustomFontTextViewBold
                android:id="@+id/textddfTravelTimeStart"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:gravity="start"
                android:text="08:10"
                android:textColor="@color/colorOrange"
                android:textSize="@dimen/_16sdp"
                android:visibility="gone"
                app:layout_constraintEnd_toStartOf="@+id/textddfTravelTimeEndHint"
                app:layout_constraintHorizontal_weight="0.2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textddfTravelTimeStartHint" />


            <com.task.utils.font.CustomFontTextViewBold
                android:id="@+id/textddfTravelTimeEnd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_1sdp"
                android:gravity="end"
                android:text="00:00"
                android:textColor="@color/colorOrange"
                android:textSize="@dimen/_16sdp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_weight="0.2"
                app:layout_constraintStart_toEndOf="@+id/textddfTravelTimeStartHint"
                app:layout_constraintTop_toBottomOf="@+id/textddfTravelTimeEndHint" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintWholeWorkTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_30sdp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/constraintWholeTravelTime">


            <com.task.utils.font.CustomFontTextViewMedium
                android:id="@+id/textddfWorkTimeStartHint"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:gravity="start"
                android:text="@string/start"
                android:textColor="@color/colorAliceBlue"
                android:textSize="@dimen/_12sdp"
                android:visibility="gone"
                app:layout_constraintEnd_toStartOf="@+id/textddfWorkTimeEndHint"
                app:layout_constraintHorizontal_weight="0.2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <com.task.utils.font.CustomFontTextViewMedium
                android:id="@+id/textddfWorkTimeEndHint"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_1sdp"
                android:gravity="end"
                android:text="@string/end"
                android:textColor="@color/colorAliceBlue"
                android:textSize="@dimen/_12sdp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_weight="0.2"
                app:layout_constraintStart_toEndOf="@+id/textddfWorkTimeStartHint"
                app:layout_constraintTop_toTopOf="parent" />


            <com.task.utils.font.CustomFontTextViewBold
                android:id="@+id/textddfWorkTimeStart"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:gravity="start"
                android:text="08:10"
                android:textColor="@color/colorOrange"
                android:textSize="@dimen/_16sdp"
                android:visibility="gone"
                app:layout_constraintEnd_toStartOf="@+id/textddfWorkTimeEndHint"
                app:layout_constraintHorizontal_weight="0.2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textddfWorkTimeStartHint" />


            <com.task.utils.font.CustomFontTextViewBold
                android:id="@+id/textddfWorkTimeEnd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_1sdp"
                android:gravity="end"
                android:text="00:00"
                android:textColor="@color/colorOrange"
                android:textSize="@dimen/_16sdp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_weight="0.2"
                app:layout_constraintStart_toEndOf="@+id/textddfWorkTimeStartHint"
                app:layout_constraintTop_toBottomOf="@+id/textddfWorkTimeEndHint" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/dfTimerConstraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@+id/constraintWholeWorkTime">


            <com.task.utils.font.CustomFontTextViewBold
                android:id="@+id/dfTimeHintTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/travel_time"
                android:textColor="@color/colorAliceBlue"
                android:textSize="@dimen/_14sdp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <com.task.utils.font.CustomFontTextViewBold
                android:id="@+id/dfTimerTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/circular_textview"
                android:gravity="center"
                android:text="@string/action_start"
                android:textColor="@color/colorAliceBlue"
                android:textSize="@dimen/_18sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dfTimeHintTextView" />

            <com.task.utils.font.CustomFontTextViewBold
